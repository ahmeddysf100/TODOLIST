    <div class="wrapper">
        <div class="main-container">
            <div class="top">
                <div class="title">
                    <h1 id="date"><%= dateee %> </h1>
                    <!-- <h2>You've got <span class="total__items">total_i</span> to do today!</h2> -->
                </div>
                <form action="/" method="post">
                    <button type="submit" class="add__btn">+</button>
            </div>
            <div class="bottom">
                <div class="add">
                    <div class="add__container">
                        <input type="text" name="toDoItem" class="add__description"
