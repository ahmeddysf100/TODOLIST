                </div>
                </form>
                <div class="container clearfix">
                    <div class="todos">
                        <div class="todos">
                            <div class="todos__list">
                                <% for( let i = 0; i < s.length; i++ ) { %>
                                <div class="item"
                                    style="background:linear-gradient(to bottom, rgba(255,190,11, 1) 0%, rgba(255,190,11, 0.8) 100%)">

                                    <div class="item__delete box center">
                                        <input type="checkbox" autocomplete="off" class="item__delete--btn"></input>
                                        <p class="item__description" ><%= s[i] %> </p>


                                    </div>

                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
            
        
    </div>
    
